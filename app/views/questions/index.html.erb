<div class="jumbotron center">
	<h1>Listing questions</h1>

	<table>
	  <thead>
		<tr>
		  <th>Question</th>
		  <th></th>
		  <th></th>
		  <th></th>
		</tr>
	  </thead>

	  <tbody>
		<% @questions.each do |question| %>
		  <tr>
			<td><%= question.question %></td>
			<td><%= link_to 'Show', question, class: "btn btn-default btn-btn-default" %></td>
			<td><%= link_to 'Edit', edit_question_path(question), class: "btn btn-default btn-btn-default" %></td>
			<td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-btn-default" %></td>
		  </tr>
		<% end %>
	  </tbody>
	</table>

	<br>

	<%= link_to 'New Question', new_question_path, class: "btn btn-default btn-btn-default" %>
</div>