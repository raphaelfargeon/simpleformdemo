<%= simple_form_for(@user_datasheet) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :phone %>
    <%= f.input :mobile %>
    <%= f.input :title %>
    <%= f.input :birthdate %>
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :nickname %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
