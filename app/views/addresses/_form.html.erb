<%= simple_form_for(@address) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :street_number %>
    <%= f.input :postal_code %>
    <%= f.input :street %>
    <%= f.input :city %>
    <%= f.input :country %>
    <%= f.input :area %>
    <%= f.input :other_information %>
    <%= f.input :building %>
    <%= f.input :company %>
    <%= f.input :company_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
