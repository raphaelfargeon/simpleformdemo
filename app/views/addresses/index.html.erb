<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>Street number</th>
      <th>Postal code</th>
      <th>Street</th>
      <th>City</th>
      <th>Country</th>
      <th>Area</th>
      <th>Other information</th>
      <th>Building</th>
      <th>Company</th>
      <th>Company name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street_number %></td>
        <td><%= address.postal_code %></td>
        <td><%= address.street %></td>
        <td><%= address.city %></td>
        <td><%= address.country %></td>
        <td><%= address.area %></td>
        <td><%= address.other_information %></td>
        <td><%= address.building %></td>
        <td><%= address.company %></td>
        <td><%= address.company_name %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

